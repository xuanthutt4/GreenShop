<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <ImageView
            android:id="@+id/pro_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="desc"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/cay_canh" />

        <TextView
            android:id="@+id/pro_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/pro_pic"
            android:paddingBottom="10dp"
            android:text="txt"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pro_name"
            android:layout_below="@id/pro_name"
            android:text="txt"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pro_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/pro_name"
            android:layout_alignBottom="@id/pro_name"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="250dp"
            android:paddingBottom="10dp"
            android:text="txt"
            android:textSize="20sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>